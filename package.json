{
  "name": "monorepo",
  "description": "A CLI utility program for Node.js monorepo projects.",
  "version": "1.2.0",
  "main": "src/index.js",
  "repository": "git@github.com:mariuslundgard/monorepo.git",
  "author": "Marius Lundg√•rd <studio@mariuslundgard.com>",
  "license": "MIT",
  "bin": {
    "monorepo": "bin/monorepo"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "scripts": {
    "commit": "git-cz",
    "format": "prettier-eslint --no-bracket-spacing --print-width 120 --write \"{src,test}/**/*.js\"",
    "lint": "eslint bin src test",
    "release": "semantic-release --access public",
    "test": "jest"
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "chalk": "^2.3.1",
    "find-config": "^1.0.0",
    "glob": "^7.1.2",
    "yargs": "^10.1.2"
  },
  "devDependencies": {
    "@transclusion/semantic-release": "^0.2.5",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^4.17.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-node": "^5.1.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest": "^22.1.4",
    "pre-commit": "^1.2.2",
    "prettier-eslint-cli": "^4.7.0",
    "rimraf": "^2.6.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "testRegex": "(\\.|/)spec\\.js$",
    "verbose": true
  }
}
